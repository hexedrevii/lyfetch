#!/bin/sh

# Colours
RED='\e[1;31m'
GREEN='\e[1;32m'
MAGENTA='\e[1;35m'
YELLOW='\e[1;33m'
NC='\e[0m'

# Sys info
NAME="$(whoami)@$(cat /etc/hostname)"
OS=$(awk -F= '$1 == "NAME" {gsub(/"/, "", $2); print $2}' /etc/os-release)
KERNEL=$(uname -r)
SHELL=$(basename $SHELL)
UPTIME="$(uptime -p | sed 's/up //')"
MEMORY="$(free -m | awk 'NR==2{print $3 "M / " $2 "M"}')"

read -r name    < /sys/devices/virtual/dmi/id/product_name
read -r version < /sys/devices/virtual/dmi/id/product_version
HOST="$name $version"

OUTPUT="$(
cat << BERRY
      ${GREEN}(    ((       ${MAGENTA}${NAME}${GREEN}
    ((  (((  ((     
    ${RED}###${GREEN}(((((${RED}###     ${RED}OS:${NC}      ${OS}${GREEN}
   ${RED}##${YELLOW}%${RED}##${GREEN}((${RED}###${YELLOW}%${RED}##    ${RED}Host:${NC}    ${HOST}${RED}
   ######${YELLOW}%${RED}####${YELLOW}%${RED}#    ${RED}Kernel:${NC}  ${KERNEL}${RED}
    ##${YELLOW}%${RED}####${YELLOW}%${RED}###     ${RED}Shell:${NC}   ${SHELL}${RED}
     ####${YELLOW}%${RED}####      ${RED}Uptime:${NC}  ${UPTIME}${RED}
       #####        ${RED}Memory:${NC}  ${MEMORY}${RED}
         #${NC}
BERRY
)"

echo -e "${OUTPUT}"